<UI xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

<!--<Frame name="GroupHistoryListener"></Frame>-->

<Frame name="GroupHistoryContainer" movable="true" enableMouse="true" hidden="true" clampedToScreen="true" parent="UIParent">
  <Size x="640" y="472" />
  <Anchors>
    <Anchor point="CENTER" />
  </Anchors>
  <Frames>
    <!-- title -->
    <Frame parentKey="title">
      <Size x="640" y="32" />
      <Anchors>
        <Anchor point="TOP" />
      </Anchors>
      <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background-Dark" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
        <BackgroundInsets>
          <AbsInset left="4" right="4" top="4" bottom="4" />
        </BackgroundInsets>
        <TileSize>
          <AbsValue val="16" />
        </TileSize>
        <EdgeSize>
          <AbsValue val="16" />
        </EdgeSize>
      </Backdrop>
      <Layers>
        <Layer>
          <FontString inherits="GameFontNormal" text="Group History">
            <Anchors>
              <Anchor point="CENTER" />
            </Anchors>
          </FontString>
        </Layer>
      </Layers>
      <Scripts>
        <OnLoad>
          self:RegisterForDrag('LeftButton')
        </OnLoad>
        <OnDragStart>
          if not self:GetParent().isLocked then
            self:GetParent():StartMoving()
          end
        </OnDragStart>
        <OnDragStop>
          self:GetParent():StopMovingOrSizing()
        </OnDragStop>
      </Scripts>
    </Frame>
    <!-- content -->
    <Frame parentKey="content">
      <Size x="640" y="440" />
      <Anchors>
        <Anchor point="TOP" x="0" y="-32" />
      </Anchors>
      <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background-Dark" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
        <BackgroundInsets>
          <AbsInset left="4" right="4" top="4" bottom="4" />
        </BackgroundInsets>
        <TileSize>
          <AbsValue val="128" />
        </TileSize>
        <EdgeSize>
          <AbsValue val="16" />
        </EdgeSize>
      </Backdrop>-
      <Frames>
        <!-- close button -->
        <Button name="$parentButtonClose" inherits="OptionsButtonTemplate" text="Close">
          <Anchors>
            <Anchor point="BOTTOM" x="0" y="16" />
          </Anchors>
          <Scripts>
            <OnClick>
              self:GetParent():GetParent():Hide()
            </OnClick>
          </Scripts>
        </Button>
      </Frames>
    </Frame>
  </Frames>
  <Scripts>
    <OnLoad>
      tinsert(UISpecialFrames, self:GetName())
    </OnLoad>
    <OnShow>
      local groupFrame = _G[self:GetName()..'GroupFrame']
      if groupFrame then
        groupFrame:Update()
      end
    </OnShow>
  </Scripts>
</Frame>
</UI>